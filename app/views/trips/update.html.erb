<div class="left_container">
	<div class="center">
		<h1>Update Trip Name</h1>

		<div id="update_trip_form">
			<%=@trip.trip_name%>
			<%= form_for Trip.new, url: "/trip_save/#{@trip_id}" do |f| %>
				<%= f.text_field :trip_name, placeholder: "Update Trip Name" %>
				<%= f.submit "Submit Changes", :class => 'submit' %>
			<% end %>
		</div>

		<br>

		<hr id="divider">
		<h2 id="update_locations">Update Locations</h2>
		<div id="new_location_button_update">
			<a id="new_location_link" href="/new_location/<%=@trip_id%>">+ Add New Location to Trip</a>
		</div>
		<div id="update_scrollable_locations">
			<% @trip_locations.to_a.each do |location|%>
				<p><%=location.address%></p>
				<p><%=location.to_coordinates[0]%>, <%=location.to_coordinates[1]%></p>
				<p><%=location.description%></p>
				<a href="/delete_location/<%=location.id%>">delete</a>
				<a href="/update_location/<%=location.id%>">update</a>
				<br><br>
			<%end%>
		</div>
	</div>
</div>

