<div class="left_container">
	<div class="center">
		<h1>Let's Get Started</h1>
		<!-- insert form for new trip -->
		<div id="new_trip">
			<%= form_for Trip.new, url: "/new_trip" do |f| %>
				<%= f.text_field :trip_name, placeholder: "Enter New Trip" %>
				<%= f.submit "New Trip", :class => 'submit' %>
			<% end %>
		</div>

		<!-- all trips made -->
		<h2>All My Trips</h2>
		<% @users_trips.to_a.each do |x|%>
			<div>
				<a class="edit_link" href="/trip_update/<%=x.id%>">U</a>
				<a class="edit_link" href="/new_location/<%=x.id%>"><span class="move_down">+</span></a>
				<a class="edit_link" href="/trip_delete/<%=x.id%>"><span>-</span></a>
				<a href="/trip_locations/<%=x.id%>"><h4><%=x.trip_name%></h4></a>
			</div>
		<%end%>
	</div>
</div>

